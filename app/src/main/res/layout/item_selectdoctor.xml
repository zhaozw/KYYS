<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:background="@mipmap/bg"

    >


    <ImageView
        android:id="@+id/selectdoctor_iv_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@mipmap/em_icon_account"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="240dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/selectdoctor_tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/black_text"
                android:textSize="16sp"
                android:text="name"
                />
            <TextView
                android:id="@+id/selectdoctor_tv_job"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                style="@style/black_text"
                android:text="name"
                android:gravity="left"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:id="@+id/selectdoctor_tv_reception"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/black_text_grey"
                android:text="@string/jiezhenliang"
                android:gravity="right"
                android:paddingRight="10dp"
                />
            <TextView
                android:id="@+id/selectdoctor_tv_reception_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                style="@style/black_text_grey"
                android:text="name"
                android:gravity="left"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:weightSum="4">
            <TextView
                android:id="@+id/selectdoctor_tv_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/black_text_grey"
                android:text="@string/jianjie"
                android:gravity="right"
                android:paddingRight="10dp"
                />
            <TextView
                android:id="@+id/selectdoctor_tv_infotext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                style="@style/black_text_grey"
                android:text="name"
                android:gravity="left"
                android:singleLine="true"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="end"
        android:layout_gravity="center_vertical|right"
        android:background="@mipmap/icon_toright"/>

</LinearLayout>