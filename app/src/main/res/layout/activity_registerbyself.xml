<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <com.mm.kyys.Wighet.XlTitle
        android:id="@+id/registerbyself_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.mm.kyys.Wighet.XlTitle>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/qxzks"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black_deep"
        android:background="#e4e4e4"
        android:visibility="gone"/>

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/registerbyself_rv_sector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="1dp"
        android:visibility="visible">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/registerbyself_rv_section_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/registerbyself_rv_section_child"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>